{
  "name": "raven",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=22.14"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "npm run build -w client && npm run build -w server",
    "dev": "concurrently \"npm run dev -w client\" \"npm run dev -w server\"",
    "lint": "npm run lint -w client",
    "start": "concurrently \"npm start -w client\" \"npm start -w server\"",
    "test": "npm test -w client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
