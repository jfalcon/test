{
  "compilerOptions": {
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "rootDir": "app",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2023",

    // paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "#/*": ["test/*"]
    }
  },
  "include": ["app"]
}
